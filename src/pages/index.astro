---
import xIcon from '../assets/icons/x-twitter.svg';
import linkedinIcon from '../assets/icons/linkedin.svg';
import youtubeIcon from '../assets/icons/youtube.svg';
import EnterpriseLayout from '../layouts/EnterpriseLayout.astro';
import { NAVIGATION } from '../data/navigation';
import Hero from '../components/Hero.astro';
import Marquee from '../components/Marquee.astro';
import SectionTitle from '../components/SectionTitle.astro';
import ProjectProfilesSection from '../components/ProjectProfilesSection.astro';
import FeatureCard from '../components/FeatureCard.astro';
import { projects } from '../data/projects';
import { site } from '../data/site';
import { freedoms } from '../data/specs';
import { pressItems } from '../data/press';
---

<EnterpriseLayout
  title="Next Frontier"
  description="Sovereign AI factories for operations that cannot fail."
>
  <Hero class="hero" />
  <Marquee class="marquee" />

  <ProjectProfilesSection projects={projects} maxVisible={6} class="section" />

  <section id="freedoms" class="section">
    <div class="container">
      <SectionTitle title={NAVIGATION.sections.freedoms} />
      <div class="grid gap-4 pt-6">
        {freedoms.map((f) => <FeatureCard {...f} />)}
      </div>
    </div>
  </section>

  {pressItems.length > 0 && (
    <section id="media" class="section">
      <div class="container">
        <SectionTitle title={NAVIGATION.sections.media} />
        <div class="space-y-6">
          {pressItems.map((m) => (
            <a href={m.url} class="flex flex-col py-6 text-neutral-700 relative block border-b border-neutral-200 hover:text-neutral-900" target="_blank" rel="noopener noreferrer">
              <style>
                a.relative::after {
                  content: "";
                  position: absolute;
                  left: 0;
                  bottom: -1px;
                  width: 0%;
                  height: 2px;
                  background: currentColor;
                  transition: width 0.5s ease;
                }
                a.relative:hover::after {
                  width: 100%;
                }
              </style>
              <div class="font-semibold tracking-tight">{m.title}</div>
              <div class="text-sm text-neutral-600">
                {m.source}, {m.date} â†’
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>
  )}

  <section id="contact" class="section">
    <div class="container">
      <SectionTitle title={NAVIGATION.sections.contact} />
      <p class="text-neutral-700 pt-6 lg:pl-6 max-md:pl-8">
        For inquiries, please contact us at <a
          class="hover:text-neutral-900 link-external"
          href={`mailto:${site.email || 'helpdesk@nextfrontier.hk'}`}
          target="_blank" rel="noopener noreferrer">{site.email || 'helpdesk@nextfrontier.hk'}</a>
      </p>
<div class="mt-4 flex flex-col sm:flex-row items-start sm:items-start gap-4 sm:gap-10 text-base">
      {site.address && (
        <div class="flex items-start gap-2">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mt-0.5 flex-shrink-0"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 1 1 18 0z"/><circle cx="12" cy="10" r="3"/></svg>
          <div class="flex flex-col max-md:pl-2">
            <span class="text-neutral-700">{site.address.street}</span>
            <span class="text-neutral-700">{site.address.address}</span>
          </div>
        </div>
      )}
      {site.phone && (
        <div 
          class="flex items-center gap-2 hover:text-neutral-700 transition-colors group"
          aria-label="Contact us on WhatsApp"
        >
          <div class="p-1 rounded-full  transition-colors">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M14.05 6C15.0268 6.19057 15.9244 6.66826 16.6281 7.37194C17.3318 8.07561 17.8095 8.97326 18 9.95M14.05 2C16.0793 2.22544 17.9716 3.13417 19.4163 4.57701C20.8609 6.01984 21.7721 7.91101 22 9.94M18.5 21C9.93959 21 3 14.0604 3 5.5C3 5.11378 3.01413 4.73086 3.04189 4.35173C3.07375 3.91662 3.08968 3.69907 3.2037 3.50103C3.29814 3.33701 3.4655 3.18146 3.63598 3.09925C3.84181 3 4.08188 3 4.56201 3H7.37932C7.78308 3 7.98496 3 8.15802 3.06645C8.31089 3.12515 8.44701 3.22049 8.55442 3.3441C8.67601 3.48403 8.745 3.67376 8.88299 4.05321L10.0491 7.26005C10.2096 7.70153 10.2899 7.92227 10.2763 8.1317C10.2643 8.31637 10.2012 8.49408 10.0942 8.64506C9.97286 8.81628 9.77145 8.93713 9.36863 9.17882L8 10C9.2019 12.6489 11.3501 14.7999 14 16L14.8212 14.6314C15.0629 14.2285 15.1837 14.0271 15.3549 13.9058C15.5059 13.7988 15.6836 13.7357 15.8683 13.7237C16.0777 13.7101 16.2985 13.7904 16.74 13.9509L19.9468 15.117C20.3262 15.255 20.516 15.324 20.6559 15.4456C20.7795 15.553 20.8749 15.6891 20.9335 15.842C21 16.015 21 16.2169 21 16.6207V19.438C21 19.9181 21 20.1582 20.9007 20.364C20.8185 20.5345 20.663 20.7019 20.499 20.7963C20.3009 20.9103 20.0834 20.9262 19.6483 20.9581C19.2691 20.9859 18.8862 21 18.5 21Z" stroke="#000000" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
          <span class="text-neutral-700">{site.phone}</span>
        </div>
      )}
    </div>
      <div class="mt-6 flex flex-wrap items-center gap-3">
        {site.socials?.x && (
          <a href={site.socials.x} aria-label="X" target="_blank" rel="noopener noreferrer" class="inline-flex h-9 w-9 items-center justify-center rounded-full border border-neutral-300 bg-white hover:bg-neutral-50 transition-colors">
            <img src={xIcon.src} alt="" width="20" height="20" class="w-5 h-5" />
          </a>
        )}
        {site.socials?.linkedin && (
          <a href={site.socials.linkedin} aria-label="LinkedIn" target="_blank" rel="noopener noreferrer" class="inline-flex h-9 w-9 items-center justify-center rounded-full border border-neutral-300 bg-white hover:bg-neutral-50 transition-colors">
            <img src={linkedinIcon.src} alt="" width="20" height="20" class="w-5 h-5" />
          </a>
        )}
        {site.socials?.youtube && (
          <a href={site.socials.youtube} aria-label="YouTube" target="_blank" rel="noopener noreferrer" class="inline-flex h-9 w-9 items-center justify-center rounded-full border border-neutral-300 bg-white hover:bg-neutral-50 transition-colors">
            <img src={youtubeIcon.src} alt="" width="20" height="20" class="w-5 h-5" />
          </a>
        )}
        {site.socials?.facebook && (
          <a href={site.socials.facebook} aria-label="Facebook" target="_blank" rel="noopener noreferrer" class="inline-flex h-9 w-9 items-center justify-center rounded-full border border-neutral-300 bg-white hover:bg-neutral-50 transition-colors">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="#1877F2" class="w-5 h-5">
              <path d="M22 12a10 10 0 1 0-11.6 9.9v-7h-2.6V12h2.6V9.8c0-2.6 1.5-4 3.8-4 1.1 0 2.2.2 2.2.2v2.4h-1.3c-1.3 0-1.7.8-1.7 1.6V12h2.9l-.5 2.9h-2.4v7A10 10 0 0 0 22 12z"/>
            </svg>
          </a>
        )}
      </div>
    </div>
  </section>
</EnterpriseLayout>
