---
import xIcon from '../assets/icons/x-twitter.svg';
import linkedinIcon from '../assets/icons/linkedin.svg';
import youtubeIcon from '../assets/icons/youtube.svg';
import EnterpriseLayout from '../layouts/EnterpriseLayout.astro';
import { NAVIGATION } from '../data/navigation';
import Hero from '../components/Hero.astro';
import Marquee from '../components/Marquee.astro';
import SectionTitle from '../components/SectionTitle.astro';
import ProjectProfilesSection from '../components/ProjectProfilesSection.astro';
import FeatureCard from '../components/FeatureCard.astro';
import { projects } from '../data/projects';
import { site } from '../data/site';
import { freedoms } from '../data/specs';
import { pressItems } from '../data/press';
---

<EnterpriseLayout
  title="Next Frontier | Sovereign AI Factories"
  description="Next Frontier builds sovereign AI factories for operations that cannot fail. Discover our mission-critical AI infrastructure and solutions."
>
  <Hero class="hero" />
  <Marquee class="marquee" />

  <ProjectProfilesSection projects={projects} maxVisible={6} class="section" />

  <section id="freedoms" class="section">
    <div class="container">
      <SectionTitle title={NAVIGATION.sections.freedoms} />
      <div class="grid gap-4 pt-6">
        {freedoms.map((f) => <FeatureCard {...f} />)}
      </div>
    </div>
  </section>

  {
    pressItems.length > 0 && (
      <section id="media" class="section">
        <div class="container">
          <SectionTitle title={NAVIGATION.sections.media} />
          <div class="space-y-6">
            {pressItems.map((m) => (
              <a
                href={m.url}
                class="press-link relative flex flex-col border-b border-neutral-200 py-6 text-neutral-700 hover:text-neutral-900"
                target="_blank"
                rel="noopener noreferrer"
              >
                <div class="font-semibold tracking-tight">{m.title}</div>
                <div class="text-sm text-neutral-600">
                  {m.source}, {m.date} →
                </div>
              </a>
            ))}
          </div>
        </div>
      </section>
    )
  }

  <section id="contact" class="section">
    <div class="container">
      <SectionTitle title={NAVIGATION.sections.contact} />
      <p class="pt-6 text-neutral-700 max-md:pl-8 lg:pl-6">
        For inquiries, please contact us at <a
          class="link-external hover:text-neutral-900"
          href={`mailto:${site.email || 'helpdesk@nextfrontier.hk'}`}
          target="_blank"
          rel="noopener noreferrer">{site.email || 'helpdesk@nextfrontier.hk'}</a
        >
      </p>
      <div
        class="mt-4 flex flex-col items-start gap-4 text-base sm:flex-row sm:items-start sm:gap-10"
      >
        {
          site.address && (
            <div class="flex items-start gap-2">
              <svg
                width="16"
                height="16"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="mt-0.5 flex-shrink-0"
                aria-hidden="true"
              >
                <>
                  <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 1 1 18 0z" />
                  <circle cx="12" cy="10" r="3" />
                </>
              </svg>
              <div class="flex flex-col max-md:pl-2">
                <span class="text-neutral-700">{site.address.street}</span>
                <span class="text-neutral-700">{site.address.address}</span>
              </div>
            </div>
          )
        }
        {
          site.phone && (
            <a
              href={`https://wa.me/${site.phone.replace(/[^0-9]/g, '')}?text=We’re interested in discussing our mission.`}
              target="_blank"
              rel="noopener noreferrer"
              class="group flex items-center gap-2 transition-colors hover:text-neutral-700"
              aria-label="Contact us on WhatsApp"
            >
              <div class="rounded-full p-1 transition-colors">
                <svg
                  fill="currentColor"
                  width="16"
                  height="16"
                  viewBox="0 0 32 32"
                  version="1.1"
                  xmlns="http://www.w3.org/2000/svg"
                  stroke="none"
                >
                  <>
                    <g id="SVGRepo_bgCarrier" stroke-width="0" />
                    <g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round" />
                    <g id="SVGRepo_iconCarrier">
                      {' '}
                      <title>whatsapp</title>{' '}
                      <path d="M26.576 5.363c-2.69-2.69-6.406-4.354-10.511-4.354-8.209 0-14.865 6.655-14.865 14.865 0 2.732 0.737 5.291 2.022 7.491l-0.038-0.070-2.109 7.702 7.879-2.067c2.051 1.139 4.498 1.809 7.102 1.809h0.006c8.209-0.003 14.862-6.659 14.862-14.868 0-4.103-1.662-7.817-4.349-10.507l0 0zM16.062 28.228h-0.005c-0 0-0.001 0-0.001 0-2.319 0-4.489-0.64-6.342-1.753l0.056 0.031-0.451-0.267-4.675 1.227 1.247-4.559-0.294-0.467c-1.185-1.862-1.889-4.131-1.889-6.565 0-6.822 5.531-12.353 12.353-12.353s12.353 5.531 12.353 12.353c0 6.822-5.53 12.353-12.353 12.353h-0zM22.838 18.977c-0.371-0.186-2.197-1.083-2.537-1.208-0.341-0.124-0.589-0.185-0.837 0.187-0.246 0.371-0.958 1.207-1.175 1.455-0.216 0.249-0.434 0.279-0.805 0.094-1.15-0.466-2.138-1.087-2.997-1.852l0.010 0.009c-0.799-0.74-1.484-1.587-2.037-2.521l-0.028-0.052c-0.216-0.371-0.023-0.572 0.162-0.757 0.167-0.166 0.372-0.434 0.557-0.65 0.146-0.179 0.271-0.384 0.366-0.604l0.006-0.017c0.043-0.087 0.068-0.188 0.068-0.296 0-0.131-0.037-0.253-0.101-0.357l0.002 0.003c-0.094-0.186-0.836-2.014-1.145-2.758-0.302-0.724-0.609-0.625-0.836-0.637-0.216-0.010-0.464-0.012-0.712-0.012-0.395 0.010-0.746 0.188-0.988 0.463l-0.001 0.002c-0.802 0.761-1.3 1.834-1.3 3.023 0 0.026 0 0.053 0.001 0.079l-0-0.004c0.131 1.467 0.681 2.784 1.527 3.857l-0.012-0.015c1.604 2.379 3.742 4.282 6.251 5.564l0.094 0.043c0.548 0.248 1.25 0.513 1.968 0.74l0.149 0.041c0.442 0.14 0.951 0.221 1.479 0.221 0.303 0 0.601-0.027 0.889-0.078l-0.031 0.004c1.069-0.223 1.956-0.868 2.497-1.749l0.009-0.017c0.165-0.366 0.261-0.793 0.261-1.242 0-0.185-0.016-0.366-0.047-0.542l0.003 0.019c-0.092-0.155-0.34-0.247-0.712-0.434z" />{' '}
                    </g>
                  </>
                </svg>
              </div>
              <span class="text-neutral-700">{site.phone}</span>
            </a>
          )
        }
      </div>
      <div class="mt-6 flex flex-wrap items-center gap-3">
        {
          site.socials?.x && (
            <a
              href={site.socials.x}
              aria-label="X"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex h-9 w-9 items-center justify-center rounded-full border border-neutral-300 bg-white transition-colors hover:bg-neutral-50"
            >
              <img
                src={xIcon.src}
                alt="X (formerly Twitter) icon"
                width="20"
                height="20"
                class="h-5 w-5"
              />
            </a>
          )
        }
        {
          site.socials?.linkedin && (
            <a
              href={site.socials.linkedin}
              aria-label="LinkedIn"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex h-9 w-9 items-center justify-center rounded-full border border-neutral-300 bg-white transition-colors hover:bg-neutral-50"
            >
              <img
                src={linkedinIcon.src}
                alt="LinkedIn icon"
                width="20"
                height="20"
                class="h-5 w-5"
              />
            </a>
          )
        }
        {
          site.socials?.youtube && (
            <a
              href={site.socials.youtube}
              aria-label="YouTube"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex h-9 w-9 items-center justify-center rounded-full border border-neutral-300 bg-white transition-colors hover:bg-neutral-50"
            >
              <img
                src={youtubeIcon.src}
                alt="YouTube icon"
                width="20"
                height="20"
                class="h-5 w-5"
              />
            </a>
          )
        }
        {
          site.socials?.facebook && (
            <a
              href={site.socials.facebook}
              aria-label="Facebook"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex h-9 w-9 items-center justify-center rounded-full border border-neutral-300 bg-white transition-colors hover:bg-neutral-50"
            >
              <svg
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="#1877F2"
                class="h-5 w-5"
                aria-hidden="true"
              >
                <path d="M22 12a10 10 0 1 0-11.6 9.9v-7h-2.6V12h2.6V9.8c0-2.6 1.5-4 3.8-4 1.1 0 2.2.2 2.2.2v2.4h-1.3c-1.3 0-1.7.8-1.7 1.6V12h2.9l-.5 2.9h-2.4v7A10 10 0 0 0 22 12z" />
              </svg>
            </a>
          )
        }
      </div>
    </div>
  </section>

  <style>
    .press-link::after {
      content: '';
      position: absolute;
      left: 0;
      bottom: -1px;
      width: 0%;
      height: 2px;
      background: currentColor;
      transition: width 0.5s ease;
    }
    .press-link:hover::after {
      width: 100%;
    }
  </style>
</EnterpriseLayout>
