---
import { MARQUEE_ITEMS } from '../data/marquee';
---
<section class="w-full bg-neutral-900 h-[160px] lg:h-[140px] flex items-center text-white">
  <div class="overflow-hidden">
    <div class="marquee inline-flex whitespace-nowrap will-change-transform" aria-hidden="true">
      {MARQUEE_ITEMS.map((item) => (
        <span class="mx-6 lg:mx-12 text-[20px] lg:text-[25px] font-semibold">{item}</span>
      ))}
    </div>
  </div>
  <style>
    @keyframes marqueeScroll { 0% { transform: translateX(0); } 100% { transform: translateX(-50%); } }
    .marquee { animation: marqueeScroll 60s linear infinite; }
    @media (prefers-reduced-motion: reduce) { .marquee { animation: none; } }
  </style>
</section>
