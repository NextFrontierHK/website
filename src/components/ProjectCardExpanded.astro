---
import type { ProjectProfile } from '../types/projects';
import { Image } from 'astro:assets';

interface Props {
  project: ProjectProfile
}

const { project } = Astro.props as Props;
const sizes = '(min-width:768px) 900px, 100vw';
---

<article
  class="w-full max-w-4xl rounded-t-2xl md:rounded-2xl bg-white p-4 md:p-8 shadow-soft"
>
  <!-- Mobile header: close and navigation -->
  <div class="mb-3 flex items-center justify-between md:hidden">
    <div class="flex items-center gap-2">
      <button
        data-action="prev"
        aria-label="Previous"
        class="h-9 w-9 rounded-full border border-neutral-300 bg-white text-neutral-800"
        >‹</button
      >
      <button
        data-action="next"
        aria-label="Next"
        class="h-9 w-9 rounded-full border border-neutral-800 bg-neutral-900 text-white"
        >›</button
      >
    </div>
  </div>
  <div class="overflow-hidden rounded-xl border border-neutral-200">
    <Image
      src={project.image}
      alt={project.title}
      width={1600}
      height={900}
      sizes={sizes}
      format="webp"
      loading="lazy"
      class="aspect-[16/9] w-full object-cover"
    />
  </div>
  <header class="mt-6">
    <h3 class="text-2xl font-semibold tracking-tight">{project.title}</h3>
    <p class="text-neutral-500">{project.subtitle}</p>
  </header>
  <p class="mt-4 leading-relaxed text-neutral-700">{project.longDescription}</p>
  
</article>
